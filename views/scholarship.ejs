    <h2 style="font-weight: 900;color:lightslategray;font-size: 500%;text-align: center;">Scholarship</h2>
    
<p> 
  <!-- <div class="forms"> -->
    <form class="resume" id="resume-form" action="/home/scholarship/specify">
      <h3>Enquiry</h3>
      <br>
      <br>
      <div>
          <label for="class">Highest Qualification</label>
         
              <select name="myclass" id="class">
                  <option value="X">10TH</option>
                  <option value="XII">12TH</option>
                  
                  <option value="grad">GRADUATION</option>
              </select>
         
      </div>
      <br>
      <div>
          <label for="board">Board/University</label>
          <input type="text" name="myboard" id="board" placeholder="Enter the name of Board/University">
      </div>
      <br>
      <div>
          <label for="CGPA">Percentage in latest Degree/CGPA</label>
          <input type="text" name="myCGPA" id="CGPA"placeholder="Enter the percentage">
      </div>
      <br>
      <br>
      <div>
          <label for="income">Family Income</label>
          <input type="text" name="myfamilyincome" id="income"placeholder="Enter the family income">
      </div>
      <br>
      <div>
          Country : 
          <input type="radio" id="inscolarshipreach" name="myscholarshipreach" value="inscolarshipreach"
                 checked>
          <label for="inscolarshipreach">India</label>
        
    
        
          <input type="radio" id="aboradscholarshipreach" name="myscholarshipreach" value="aboradscholarshipreach">
          <label for="aboradscholarshipreach">Aborad</label>
          <button type="submit" style="background-color: red;color: white;border-radius: 10%;border-color:white;">Submit</button>
        </div>
  
  </form>
  </div>
  
<!-- <div class="left"> -->
      
     
  <p id="para"> 
    <div class="list">
        <table class="table table-striped table-dark">
            <thead class="thead-dark">
              <tr>
                <th scope="col-1">S.NO</th>
                <th scope="col-4">Scolarship Name</th>
                <th scope="col-2">Qualification</th>
                <th scope="col-1">Income</th>
                <th scope="col-1">Percentage</th>
                <th scope="col-1">Reward</th>
                <th scope="col-2">Website</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>Colgate Scholarship</td>
                <td>10th or 12th</td>
                <td>Less than 1 Lakhs</td>
                <td>75</td>
                <td>35000</td>
                <td>www.Colgate.co.in</td>
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Indian Oil Scolarship(IOCL)</td>
                <td>10th</td>
                <td>Less than 1 Lakhs</td>
                <td>65</td>
                <td>RS 2000 per month</td>
                <td>https://www.iocl.com/</td>
              </tr>
              <tr>
                <th scope="row">3</th>
                <td>Jio Scholarship</td>
                <td>10th</td>
                <td>No Limit</td>
                <td>85</td>
                <td>RS 3500 per month</td>
                <td>https://www.jio.com/</td>
              </tr>
              <tr>
                <th scope="row">4</th>
                <td>National Talent Search Scheme</td>
                <td>10th</td>
                <td>No Limit</td>
                <td>NIL</td>
                <td>RS 1250 per month</td>
                <td>http://ntse.ncert.gov.in/login.aspx?ReturnUrl=%2f</td>
              </tr>
              <tr>
                <th scope="row">5</th>
                <td>Ujjwal Bhavishya Scholarship</td>
                <td>10th</td>
                <td>No Limit</td>
                <td>85</td>
                <td>RS 20000</td>
                <td>https://www.registrationstatus.in/ujjwal-bhavishya-scholarship/</td>
              </tr>
              <tr>
                <th scope="row">6</th>
                <td>Prime Minister Scholarship</td>
                <td>12th</td>
                <td>No Limit</td>
                <td>60</td>
                <td>Rs 2000/month for boys and Rs 2250/month for girls</td>
                <td>www.ksb.gov.in</td>
              </tr>
              <tr>
                <th scope="row">7</th>
                <td>Hdfc Bank Scholarship</td>
                <td>12th</td>
                <td>No Limit</td>
                <td>60</td>
                <td>RS 10,000 for school students and RS 35000 for college student</td>
                <td>https://www.buddy4study.com/page/hdfc-bank-parivartans-ecs-scholarship</td>
              </tr>
            </tbody>
          </table>
  </div>
  </p></div>
<div>
  <table class="table table-striped table-dark">
    <thead class="thead-dark">
      <tr>
        <th scope="col-2">Name</th>
        <th scope="col-6">Reward</th>
        <th scope="col-2">Qualification</th>
    </tr>
    <% for(let i of list){ %>
      <tr>
        <td><%= i.name %></td>
        <td><%= i.reward %></td>
        <td><%= i.standard %></td>
      </tr>
    <% } %>
  </table>
</div>
  <div class="footer"></div>
</div>
</body>
</html>