<%- include('partials/header') %>
    <title>Resume</title>

    <link rel="stylesheet" type="text/css" href="/resume.css">
</head>

<body>


    <div class="create-resume">
            <div class="form">
            <form class="resume" id="resume-form" action="/resume" method="post">
                <h2>
                    Create Your Resume
                </h2>
                <div class="input">
                    <label for="">Name</label>
                    <input type="text" placeholder="Enter Your name" id="username">
                
                <div class="input">
                    <label for="">Skills</label>
                    <input type="text" placeholder="Skills" id="skill">
                
                </div>

                <div class="input">
                    <label for="">Job Description</label>
                    <br>
                    <textarea id="describe" cols="45" rows="5" placeholder="Describe..."></textarea>
                
                </div>
                
                <button type="submit">CREATE</button>

            </form>
        </div>
    </div>


</body>

</html>